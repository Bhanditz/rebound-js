{
  "name": "rebound",
  "version": "0.0.15",
  "description": "A simple library for modeling spring dynamics",
  "main": "rebound.js",
  "types": "rebound.d.ts",
  "author": "Facebook",
  "license": "BSD",
  "dependencies": {},
  "repository": {
    "type": "git",
    "url": "git@github.com:facebook/rebound-js.git"
  },
  "bugs": {
    "url": "https://github.com/facebook/rebound-js/issues"
  },
  "keywords": [
    "facebook",
    "animation"
  ],
  "scripts": {
    "build": "rollup -f umd -c ./rollup.config.js -o rebound.js",
    "dist": "yarn build && uglifyjs --compress --mangle -o rebound.min.js rebound.js",
    "flow": "flow",
    "prettier": "prettier --write {src,spec}/**/*.js",
    "jasmine": "jasmine-node spec",
    "watch": "yarn build -- --watch",
    "test": "yarn prettier --list-different && yarn flow && yarn jasmine"
  },
  "devDependencies": {
    "babel-core": "^6.22.0",
    "babel-plugin-external-helpers": "^6.22.0",
    "babel-plugin-transform-class-properties": "^6.24.1",
    "babel-plugin-transform-object-rest-spread": "^6.23.0",
    "babel-preset-env": "^1.6.0",
    "babel-preset-flow": "^6.23.0",
    "flow-bin": "0.61.0",
    "jasmine-node": "^1.14.5",
    "prettier": "^1.9.2",
    "rollup": "^0.52.3",
    "rollup-plugin-babel": "^3.0.3",
    "uglify-js": "^3.0.27"
  },
  "prettier": {
    "bracketSpacing": false,
    "proseWrap": "always",
    "singleQuote": true,
    "trailingComma": "all"
  }
}
